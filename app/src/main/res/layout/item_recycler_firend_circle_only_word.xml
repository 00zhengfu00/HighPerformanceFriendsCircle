<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/avatar_icon"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="54dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#697A9F"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="3dp"
            android:text="看了这款AKG,才知道2(beats)就是个渣渣，看了这款AKG,才知道2(beats)就是个渣渣,看了这款AKG,才知道2(beats)就是个渣渣"
            android:textStyle="bold"/>

        <include layout="@layout/include_item_recycler_time"/>

        <include layout="@layout/include_item_recycler_praise_and_comment"/>

    </LinearLayout>

</FrameLayout>